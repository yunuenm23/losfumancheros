{% extends 'layout.twig' %}

{% block conciertos %}

 	<header class="header-conciertos d-flex flex-column justify-content-center alig-items-center box-bottom-shadow">
 		<div class="bg-dark-alpha py-5">
 		<div class="d-flex flex-column justify-content-cente align-items-center">
 			<h2 class="text-white wow slideInDown" data-wow-duration="2s">A Fumanchear</h2>
 		</div>
		<div class="d-flex flex-column justify-content-cente align-items-center">
			<img src="images/logoGrande.png" alt="" class="img-conciertos wow fadeIn">
		</div>
		</div>
 	</header>

	<div class="white">
		<div class="container py-5">
			<div class="title-album">
				<h2>Conciertos</h2>
			</div>
			<div class="border-title my-3"></div>
			<div class="row">
				<div class="col-lg-10 col-sm-12 d-flex flex-column">
					<div class="row">
						<div class="col-lg-12 col-md-12 col-sm-12">
						{% for show in shows %}
						<div class="tickets d-flex flex-column flex-md-row align-items-center my-2 wow slideInLeft" data-wow-duration="2s">
							<img src="{{ show.show_img }}" class="tickets-img" alt="">
							<div class="tickets-title text-uppercase text-dark p-4">
								<h3>{{ show.title }}</h3>
								<h4>{{ show.city }}</h4>
							</div>
							<div class="tickets-border"></div>
								<div class="tickets-date p-4 text-uppercase text-dark text-center"> 
									<h4>{{ show.date }}</h4>
									<h4>{{ show.time }}</h4> 
								</div>
							<div class="tickets-border"></div>
							<div class="tickets-buy d-flex justify-content-center align-items-center p-4">
								<a href="{{ tickets_url }}" class="btn btn-tickets text-uppercase" target="_blank">Asistir</a>
							</div>
						</div>
						</div>
					</div>
					{% endfor %}
				</div>
				<div class="col-lg-2 col-sm-12">
					{% for adword in adwords %}
      					<div style="width:100%; height: 100%;">{{ adword.script|raw }}</div>
    				{% endfor %}
				</div>
			</div>
		</div>
	</div>	


{% endblock %}