{% extends 'layoutExtends.twig' %}

{% block album %}

{% for albums in album %}

 	<header style="background-image: url(' ../{{ albums.bg_album}}');" class="header-album d-flex flex-column justify-content-center alig-items-center box-bottom-shadow">
 		<div class="bg-degradado  py-5">
 		<div class="d-flex flex-column justify-content-cente align-items-center">
 			<h2 class="wow slideInDown" data-wow-duration="2s">{{ albums.title}}</h2>
 			<div class="album-border"></div>
			<p class="text-header-album">Año de lanzamiento: {{ albums.year}}</p>
			<p class="text-header-album">Producción: {{ albums.production}}</p>
 		</div>
		<div class="d-flex flex-column justify-content-cente align-items-center">
			<img src="../{{ albums.album_img }}" alt="" class="img-header-album wow fadeIn">
		</div>
		</div>
 	</header>
{% endfor %}
	<div class="white">
		<div class="container">
			<div class="row">
				<div class="col-lg-6 col-md-12">
					<div class="container-tracks py-5">
						<div class="title-album">
							<h2>Listas de reproducción</h2>
						</div>
						<div class="border-title my-3"></div>
						<ul class=" py-2">
							<li class="d-flex justify-content-around align-items-center">
{# 								<div class="play-audio">
									
								</div> #}
								<a class="text-dark px-5">1. Se Busca Fumanchera</a>
								<div class="options-album d-flex justify-content-center align-items-center">
									<a class="btn btn-video" data-toggle="modal" data-target="#vervideo" ><i class="fab fa-youtube fa-2x"></i></a>

									<div class="modal fade" id="vervideo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
										<div class="modal-dialog modal-lg" role="document">
										   	<div class="modal-content contacto">
										      <div class="modal-header">
										        <h2 class="modal-title text-yellow" id="exampleModalLongTitle">Se Busca Fumanchera</h2>
										        <a class="cerrar" data-dismiss="modal"><i class="far fa-window-close fa-3x"></i></a>
										      </div>
										      <div class="">
										        <iframe class="video-youtube" src="https://www.youtube.com/embed/zIC-WBDv4aQ?showinfo=0&color=white" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
										      </div>
										   	</div>
										</div>
									</div>

								</div>
							</li>

						</ul>
					</div>
				</div>
{% for albums in album %}
				<div class="col-lg-6 col-md-12 py-5">
					<div class="title-album">
						<h2>El disco</h2>
						<div class="border-title"></div>
						<div class="text-album py-4 px-2">
							{{ albums.description|raw }}
						</div>
					</div>
					<div class="title-album pb-3">
						<h2>Comprar</h2>
					</div>
					<div class="buy-album">
						<a class="btn btn-buy" href="{{ albums.spotify}}" target="_blank"><i class="fab fa-spotify fa-2x"></i></a>
						{# <a class="btn btn-buy" href="{{ albums.paypal}}" target="_blank"><i class="fab fa-cc-paypal fa-2x"></i></a> #}
						<a class="btn btn-buy" href="{{ albums.amazon}}" target="_blank"><i class="fab fa-amazon fa-2x"></i></a>
						<a class="btn btn-buy" href="{{ albums.apple}}" target="_blank"><i class="fab fa-cc-apple-pay fa-2x"></i></a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endfor %}
{% endblock %}