						<script type="text/javascript">
							jssor_1_slider_init = function() {

								var jssor_1_options = {
								$AutoPlay: 1,
								$AutoPlaySteps: 3,
								$SlideDuration: 160,
								$SlideWidth: 350,
								$SlideHeight: 350,
								$SlideSpacing: 3,
