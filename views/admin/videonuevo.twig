{% extends 'layoutAdminExtends.twig' %}

{% block videonuevo %}

<div class="container white">
	<div class="row  py-5">
		<h2>Video Nuevo</h2>
		<div class="col-12 d-flex justify-content-start">
			<a class="btn btn-danger mx-1" href="{{ 'admin' | url }}">
				<i class="fas fa-undo fa-2x"></i>
			</a>
			<a class="btn btn-danger mx-1" href="{{ 'admin' | url }}">
				<i class="fas fa-home fa-2x"></i>
			</a>
			<a class="btn btn-danger mx-1" data-toggle="collapse" href="#newuser" role="button" aria-expanded="false" aria-controls="collapseExample">
				<i class="fas fa-align-center fa-2x"></i>
			</a>
		</div>
		<div class="col-12">
			<div class="collapse" id="newuser">
				<form method="post" class="white my-3 p-3" enctype="multipart/form-data">
					<h3>Nuevo video</h3>
					<div class="form-group">
						<h4>Titulo</h4>
						<input type="text" class="form-control" name="titulo" placeholder="Titulo" onblur="may(this.value, this.id)">
					</div>
					<div class="form-group">
						<h4>C贸digo de youtube</h4>
						<input type="text" class="form-control" name="codigo" placeholder="C贸digo de youtube">
					</div>
					<div class="form-group">
						<h4>Descripci贸n</h4>
						<textarea id="editor1" name="info" rows="25" class="p-4"></textarea>
						<script>
						    CKEDITOR.replace( 'editor1' );
						</script>
					</div>
					<button type="submit" class="btn btn-danger text-uppercase"><i class="fas fa-plus"></i></button>
				</form>
			</div>
		</div>

		<div class="col-sm-12 py-3">
			<table class="table table-hover white">
			  <thead class="thead-light">
			    <tr>
			      <th scope="col"><h4>Titulo</h4></th>
			      <th scope="col"><h4>C贸digo de Youtube</h4></th>
			      <th scope="col"><h4>Contenido</h4></th>
			      <th scope="col"><h4>Modificar</h4></th>
			      <th scope="col"><h4>Eliminar</h4></th>
			    </tr>
			  </thead>
			  <tbody class="text-dark">
				{% for videos in video %}
				<tr>
			  		<td><p>{{ videos.title }}</p></td>
			  		<td><p>{{ videos.codigo }}</p></td>
			  		<td><p>{{ videos.informacion|raw }}</p></td>
			  		<td><a href="{{'admin/videonuevo/editarvideo/' | url }}{{ videos.id }}"><i class="text-green far fa-edit fa-2x"></i></a></td>
			  		<td><a href="{{'admin/videonuevo/delete/' | url }}{{ videos.id }}"><i class="text-danger far fa-times-circle fa-2x text-red"></i></a></td>
				</tr>
				{% endfor %}
			  </tbody>
			</table>
		</div>
	</div>
</div>

{% endblock %}