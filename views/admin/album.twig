{% extends 'layoutAdminExtends.twig' %}

{% block album %}

<div class="container white">
	<div class="row  py-5">
		<h2>Álbums</h2>
		<div class="col-12 d-flex justify-content-start">
			<a class="btn btn-danger mx-1" href="{{ 'admin' | url }}">
				<i class="fas fa-undo fa-2x"></i>
			</a>
			<a class="btn btn-danger mx-1" href="{{ 'admin' | url }}">
				<i class="fas fa-home fa-2x"></i>
			</a>
			<a class="btn btn-danger mx-1" data-toggle="collapse" href="#newuser" role="button" aria-expanded="false" aria-controls="collapseExample">
				<i class="fas fa-music fa-2x"></i>
			</a>
			<a class="btn btn-warning mx-1" data-toggle="collapse" href="#music" role="button" aria-expanded="false" aria-controls="collapseExample">
				<i class="far fa-image fa-2x"></i>
			</a>
		</div>
		<div class="col-sm-12">
			<div class="collapse" id="newuser">
				<form method="post" class="white my-3 p-3" enctype="multipart/form-data">
					<h3 class="bolder">Nuevo álbum</h3>
					<div class="form-group">
						<h4>Año</h4>
						<input type="text" class="form-control" name="year" placeholder="Año" onblur="may(this.value, this.id)">
					</div>
					<div class="form-group">
						<h4>Titulo</h4>
						<input type="text" class="form-control" name="title" placeholder="Titulo" onblur="may(this.value, this.id)">
					</div>
					<div class="form-group">
						<h4>Producción</h4>
						<input type="text" class="form-control" name="production" placeholder="Producción" onblur="may(this.value, this.id)">
					</div>
					<div class="form-group">
						<h4>Descripción</h4>
						<textarea id="editor1" name="description" rows="25" class="p-4"></textarea>
						<script>
						    CKEDITOR.replace( 'editor1' );
						</script>
					</div>

					<h4>Portada de álbum</h4><h4 class="text-danger">TAMAÑO RECOMENDADO: 400 X 400</h4>
					<div class="form-group py-1">
						<input type="file" class="form-control" name="album" required>
					</div>
					
					<h4>Fondo de portada</h4><h4 class="text-danger">TAMAÑO RECOMENDADO: 1980 X 1080</h4>
					<div class="form-group py-1">
						<input type="file" class="form-control" name="bgalbum" required>
					</div>

					<div class="form-group">
						<input type="text" class="form-control" name="spotify" placeholder="Url de spotify">
					</div>
					<div class="form-group">
						<input type="text" class="form-control" name="paypal" placeholder="Url de paypal">
					</div>
					<div class="form-group">
						<input type="text" class="form-control" name="amazon" placeholder="Url de amazon">
					</div>
					<div class="form-group">
						<input type="text" class="form-control" name="apple" placeholder="Url de apple">
					</div>
					<button type="submit" class="btn btn-danger text-uppercase"><i class="fas fa-plus"></i></button>
				</form>
			</div>
		</div>

		<div class="col-sm-12">
			<div class="collapse" id="music">
				<form method="post" class="white my-3 p-3" enctype="multipart/form-data">
					<h3 class="bolder">Nuevo álbum</h3>
					<div class="form-group">
					<div class="form-group">
						<input type="text" class="form-control" name="year" placeholder="Año" onblur="may(this.value, this.id)">
					</div>
					</div>
					<div class="form-group">
						<input type="text" class="form-control" name="title" placeholder="Titulo" onblur="may(this.value, this.id)">
					</div>
					<div class="form-group">
						<input type="text" class="form-control" name="production" placeholder="Producción" onblur="may(this.value, this.id)">
					</div>
					<div class="form-group">
						<textarea id="editor1" name="description" rows="25" class="p-4"></textarea>
						<script>
						    CKEDITOR.replace( 'editor1' );
						</script>
					</div>
					<div class="form-group">
						<input type="file" class="form-control" name="album" required>
					</div>
					<div class="form-group">
						<input type="file" class="form-control" name="bgalbum" required>
					</div>
					<div class="form-group">
						<input type="text" class="form-control" name="spotify" placeholder="Url de spotify">
					</div>
					<div class="form-group">
						<input type="text" class="form-control" name="paypal" placeholder="Url de paypal">
					</div>
					<div class="form-group">
						<input type="text" class="form-control" name="amazon" placeholder="Url de amazon">
					</div>
					<div class="form-group">
						<input type="text" class="form-control" name="apple" placeholder="Url de apple">
					</div>
					<button type="submit" class="btn btn-danger text-uppercase"><i class="fas fa-plus"></i></button>
				</form>
			</div>
		</div>

		<div class="col-sm-12 py-3">
			<table class="table table-hover white">
			  <thead class="thead-light">
			    <tr>
			      <th scope="col"><h4>Titulo</h4></th>
			      <th scope="col"><h4>Año</h4></th>
			      <th scope="col"><h4>Producción</h4></th>
			      <th scope="col"><h4>Descripción</h4></th>
			      <th scope="col"><h4>EDITAR</h4></th>
			      <th scope="col"><h4>ELIMINAR</h4></th>
			    </tr>
			  </thead>
			  <tbody class="text-dark">
				{% for albums in album %}
				<tr>
					<td class="light"><p>{{ albums.title }}</p></td>
			  		<td><p>{{ albums.year }}</p></td>
			  		<td><p>{{ albums.production }}</p></td>
			  		<td><p>{{ albums.description|raw }}</p></td>
			  		<td><a href="{{'admin/album/albumedit/' | url }}{{ albums.id }}"><i class="text-green far fa-edit fa-2x"></i></a></td>
			  		<td><a href="{{'admin/album/delete/' | url }}{{ albums.id }}"><i class="text-danger far fa-times-circle fa-2x text-red"></i></a></td>
				</tr>
				{% endfor %}
			  </tbody>
			</table>
		</div>
	</div>
</div>

{% endblock %}