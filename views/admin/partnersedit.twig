{% extends 'layoutAdminExtra.twig' %}

{% block partnersedit %}

<div class="container white">
	<div class="row  py-5">
		<div class="col-sm-12 d-flex justify-content-start">
			<a class="btn btn-danger mx-1" href="{{ 'admin/partners' | url }}">
				<i class="fas fa-undo fa-2x"></i>
			</a>
			<a class="btn btn-danger mx-1" href="{{ 'admin' | url }}">
				<i class="fas fa-home fa-2x"></i>
			</a>
		</div>
{% for partners in partner %}
		<div class="col-sm-12">
			<div class="" id="newuser">
				<form method="post" class="white my-3 p-3" enctype="multipart/form-data">
					<h3 class="bolder">Editar patrocinador</h3>

					<div class="form-group">
						<h4>Url</h4>
						<input type="text" class="form-control" name="url" placeholder="Dirección a consultar" value="{{ partners.url }}" onblur="may(this.value, this.id)">
					</div>

					<div class="d-flex flex-column">
				        <h4>Imagen actual:</h4>
						<h4 class="text-danger">Tamaño recomendado: 380 x 170</h4>
				        <img class="cursor py-2" src="../../../{{ partners.logo }}" width="300" data-toggle="modal" data-target="#logo">
				      	<!-- Modal -->
				      	<div class="modal fade" id="logo" tabindex="-1" role="dialog" aria-hidden="true">
				        	<div class="modal-dialog modal-dialog-centered  modal-lg" role="document">
				          		<img class="p-1 white" src="../../../{{ partners.logo }}" width="100%">
				        	</div>
				      	</div>
				     </div>

					<div class="form-group">
						<input type="file" class="form-control" name="logo">
					</div>
					<input type="hidden" name="id" value="{{ partners.id }}"></input>
					<button type="submit" class="btn btn-danger text-uppercase"><h4>Guardar</h4></button>
				</form>
			</div>
		</div>
{% endfor %}
	</div>

</div>

{% endblock %}