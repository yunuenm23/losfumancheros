			      	<th scope="col"><h4>MODIFICAR</h4></th>
			    </tr>
			  </thead>
			  <tbody class="text-dark">
				{% for heads in head %}
				<tr>
					<td><p>{{ heads.sititle }}</p></td>
					<td><p>{{ heads.description }}</p></td>
					<td><p>{{ heads.keywords }}</p></td>
					<td><p>{{ heads.author }}</p></td>
					<td><a href="{{'admin/head/headedit/' | url }}{{ heads.id }}"><i class="text-green far fa-edit fa-2x"></i></a></td>
				</tr>
				{% endfor %}
			  </tbody>
			</table>
		</div>
	</div>
</div>

{% endblock %}