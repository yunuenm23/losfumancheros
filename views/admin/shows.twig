{% extends 'layoutAdminExtends.twig' %}

{% block shows %}

<div class="container white">
	<div class="row  py-5">
		<h2>Conciertos</h2>
		<div class="col-sm-12 d-flex justify-content-start">
			<a class="btn btn-danger mx-1" href="{{ 'admin' | url }}">
				<i class="fas fa-undo fa-2x"></i>
			</a>
			<a class="btn btn-danger mx-1" href="{{ 'admin' | url }}">
				<i class="fas fa-home fa-2x"></i>
			</a>
			<a class="btn btn-danger mx-1" data-toggle="collapse" href="#newuser" role="button" aria-expanded="false" aria-controls="collapseExample">
				<i class="fas fa-microphone fa-2x"></i>
			</a>
		</div>
		<div class="col-sm-12">
			<div class="collapse" id="newuser">
				<form method="post" class="white my-3 p-3" enctype="multipart/form-data">
					<h3 class="bolder">Nuevo concierto</h3>
					<div class="form-group">
						<h4>Titulo</h4>
						<input type="text" class="form-control" name="title" placeholder="Nombre" onblur="may(this.value, this.id)">
					</div>
					<div class="form-group">
						<h4>Fecha</h4>
						<input type="date" class="form-control" name="date" placeholder="Fecha" onblur="may(this.value, this.id)">
					</div>
					<div class="form-group">
						<h4>Hora</h4>
						<input type="time" class="form-control" name="time" placeholder="Hora" onblur="may(this.value, this.id)">
					</div>
					<div class="form-group">
						<h4>Url de boletos</h4>
						<input type="text" class="form-control" name="tickets_url" placeholder="Url de boletos" onblur="may(this.value, this.id)">
					</div>
					<div class="form-group">
						<h4>Url del evento</h4>
						<input type="text" class="form-control" name="show_url" placeholder="Url del lugar" onblur="may(this.value, this.id)">
					</div>
					<div class="form-group">
						<h4>Subir imagen</h4>
						<h4 class="text-danger">TAMAÃ‘O RECOMENDADO 400 X 400</h4>
						<input type="file" class="form-control" name="show_img">
					</div>
					<div class="form-group">
						<h4>Lugar del concierto</h4>
						<input type="text" class="form-control" name="city" placeholder="Lugar del concierto" required>
					</div>
					<button type="submit" class="btn btn-danger text-uppercase"><i class="fas fa-plus"></i></button>
				</form>
			</div>
		</div>

		<div class="col-sm-12 py-3">
			<table class="table table-hover white">
			  <thead class="thead-light">
			    <tr>
			      <th scope="col"><h4>Concierto</h4></th>
			      <th scope="col"><h4>Fecha</h4></th>
			      <th scope="col"><h4>Hora</h4></th>
			      <th scope="col"><h4>Lugar</h4></th>
			      <th scope="col"><h4>EDITAR</h4></th>
			      <th scope="col"><h4>ELIMINAR</h4></th>
			    </tr>
			  </thead>
			  <tbody class="text-dark">
				{% for show in shows %}
				<tr>
					<td><p>{{ show.title }}</p></td>
			  		<td><p>{{ show.date }}</p></td>
			  		<td><p>{{ show.time }}</p></td>
			  		<td><p>{{ show.city|raw }}</p></td>
			  		<td><a href="{{'admin/shows/showsedit/' | url }}{{ show.id }}"><i class="text-green far fa-edit fa-2x"></i></a></td>
			  		<td><a href="{{'admin/shows/delete/' | url }}{{ show.id }}"><i class="text-danger far fa-times-circle fa-2x text-red"></i></a></td>
				</tr>
				{% endfor %}
			  </tbody>
			</table>
		</div>
	</div>
</div>

{% endblock %}