<!-- MODAL CONTACTO -->
<div class="modal fade" id="contacto" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
	   	<div class="modal-content contacto">
	      <div class="modal-header">
	        <h2 class="modal-title text-yellow" id="exampleModalLongTitle">Contacto</h2>
	        <a class="cerrar" data-dismiss="modal"><i class="far fa-window-close fa-3x"></i></a>
	      </div>
	      <div class="modal-body">
	        <form class="form-contacto">
			  <div class="form-contacto-group d-flex">
			    <label for="correo"><i class="fas fa-at fa-2x p-1"></i></label>
			    <input type="email" id="correo" aria-describedby="emailHelp" placeholder="Correo electrónico" required>
			  </div>
			  <div class="form-contacto-group d-flex">
			    <label for="asunto">Asunto</label>
			    <input type="text" id="asunto" placeholder="Asunto">
			  </div>
			  <div class="form-contacto-group d-flex">
			    <label for="mensaje"><i class="far fa-comments fa-3x p-1"></i></label>
			    <textarea rows="7" id="mensaje" placeholder="Mensaje" required></textarea>
			  </div>
			  <button type="submit" class="btn btn-success text-uppercase">Enviar</button>
			</form>
	      </div>
	   	</div>
	</div>
</div>

