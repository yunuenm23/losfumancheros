<footer>
	{% for footers in footer %}
	<div class="container">
		<div class="row py-2">
			<div class="col-lg-4 col-sm-12 newsletter pt-3">
				<h4 class="text-uppercase text-white">Newsletter</h4>
				<form class="form-footer" method="post" enctype="multipart/form-data">
					<input type="text" class="mb-2" placeholder="Nombre" name="name" required>
					<input type="text" class="mb-2" placeholder="Ciudad" name="city" required>
					<input type="email" class="mb-2" placeholder="Correo electrónico" name="email" required>
					<button class="btn btn-danger mt-3" type="submit">Suscribirse</button>
				</form>
			</div>
			<div class="col-lg-8 col-sm-12 text-right hiring pt-3">
				<h4 class="text-white">Contrataciones y Promoción</h4>
				<div class="telephone d-flex justify-content-end align-items-center py-2"><i class="text-green fas fa-mobile fa-2x mx-1"></i>{{ footers.hiring }}</div>
				<div class="address d-flex justify-content-end align-items-center py-2"><i class="text-green fas fa-map-marker fa-2x mx-2"></i>{{ footers.city }}</div>
			</div>
		</div>
		<div class="">
			<ul class="social py-2">
				<li><a class="mx-3" href="{{ footers.facebook }}" target="_blank"><i class="fab fa-facebook-f fa-2x"></i></a></li>
				<li><a class="mx-3" href="{{ footers.twitter }}" target="_blank"><i class="fab fa-twitter fa-2x"></i></a></li>
				<li><a class="mx-3" href="{{ footers.youtube}}" target="_blank"><i class="fab fa-youtube fa-2x"></i></a></li>
				<li><a class="mx-3" href="{{ footers.instagram }}" target="_blank"><i class="fab fa-instagram fa-2x"></i></a></li>
			</ul>
		</div>
		<div class="developer pt-2 text-center">Copyright © 2018 - All rights reserved</div>
		<div class="developer pb-2 text-center"><a class="text-white" href="stilo.gdl.mx" target="_blank">{{ footers.developer }}</a></div>
	</div>
	{% endfor %}
</footer>
	
	
